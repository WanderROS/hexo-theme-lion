<% var last; %>
<% page.posts.each(function(post, i){ %>
  <% var year = post.date.year(); %>
  <% if (last != year){ %>
    <% if (last != null){ %>
      <li><hr></li>
    <% } %>
    <% last = year; %>
  <% } %>
  <li class='archive-item'>
    <div class='archive-date'>
      <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, 'YYYY-MM-DD') %></time>
    </div>
    <div class='archive-title'>
      <h1><a class="archive-article-title" href="<%- config.root %><%- post.path %>"><%= post.title %></a></h1>
    </div>
  </li>
<% }) %>
